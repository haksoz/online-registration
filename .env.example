# Database Connection
# Hostinger veya diğer hosting sağlayıcılar için veritabanı bilgileri
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=your_database_name

# JWT Authentication Secret
# Güvenli bir random string oluşturun (en az 32 karakter)
# Örnek: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Next.js Public URL (Opsiyonel)
# Production'da uygulamanızın tam URL'i
NEXT_PUBLIC_BASE_URL=https://your-domain.com

# Mail Settings (Opsiyonel - Admin panelden de ayarlanabilir)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Settings (Opsiyonel)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/tmp/uploads

# Node Environment
NODE_ENV=production
